<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!--============================================================
        Пул соединений
    =============================================================-->
    <!--Передача управления пулом серверу Томкет через связь с контекстом,
    остальные настройки находятся в контексте-->
    <description>MySQL</description>
    <resource-ref>
        <description>MySQL DB Connection Pool</description>
        <res-ref-name>jdbc/CP4DB</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <!--============================================================
        Сервлет и общие настройки
    =============================================================-->
    <servlet>
        <display-name>frontControllerServlet</display-name>
        <servlet-name>frontControllerServlet</servlet-name>
        <servlet-class>
            com.epam.finalproject.hotel.controller.FrontControllerServlet
        </servlet-class>
        <init-param>
            <param-name>command</param-name>
            <param-value>homePage</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>frontControllerServlet</servlet-name>
        <url-pattern>/frontControllerServlet</url-pattern>
    </servlet-mapping>

    <!--главная страница по умолчанию-->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!--страница ошибки по коду ответа от сервера-->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jsp/error/error_page_404.jsp</location>
    </error-page>

    <!--страница ошибки по типу ошибки Java кода-->
    <error-page>
        <exception-type>java.lang.RuntimeException</exception-type>
        <location>/WEB-INF/jsp/error/error_page_RuntimeExeption.jsp</location>
    </error-page>

    <!--конфигурация сессии-->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!--============================================================
        i18n support
    =============================================================-->

    <!--Регистрация фильтра i18n в системе и привязка фильтра к сервлету-->
    <filter>
        <filter-name>SessionLocaleFilter</filter-name>
        <filter-class>
            com.epam.finalproject.hotel.controller.filter.SessionLocaleFilter
        </filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SessionLocaleFilter</filter-name>
        <servlet-name>frontControllerServlet</servlet-name>
    </filter-mapping>

    <!--привзяка фильтра к странице или сервлету по URL-->
    <filter-mapping>
        <filter-name>SessionLocaleFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


    <!-- this way we set the default locale (optional) -->
    <!-- the (preferable) browser's locale will be used if we don't set the default locale -->
    <context-param>
        <param-name>language</param-name>
        <param-value>uk</param-value>
    </context-param>
    <!--============================================================
    parameters filter
    =============================================================-->

    <!--Регистрация фильтра с важными параметрами в системе и привязка фильтра к сервлету-->
    <filter>
        <filter-name>SessionParametersFilter</filter-name>
        <filter-class>
            com.epam.finalproject.hotel.controller.filter.SessionParametersFilter
        </filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>SessionParametersFilter</filter-name>
        <servlet-name>frontControllerServlet</servlet-name>
    </filter-mapping>

    <!--привзяка фильтра к странице или сервлету по URL-->
    <filter-mapping>
        <filter-name>SessionParametersFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>



    <!--============================================================
    authorization
    =============================================================-->



    <!--Регистрация фильтра authorization в системе и привязка фильтра к сервлету-->
    <filter>
        <filter-name>AccessFilter</filter-name>
        <filter-class>
            com.epam.finalproject.hotel.controller.filter.AccessFilter
        </filter-class>
        <init-param>
            <param-name>active</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <servlet-name>frontControllerServlet</servlet-name>
    </filter-mapping>

    <!--привзяка фильтра к странице или сервлету по URL-->
    <filter-mapping>
        <filter-name>AccessFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!--============================================================
    log4j
    =============================================================-->

    <display-name>Log4jHotel</display-name>
    <context-param>
        <param-name>log4j-config-location</param-name>
        <param-value>WEB-INF/log4j.properties</param-value>
    </context-param>

</web-app>